<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp"

    >

    <LinearLayout
        android:id="@+id/HomeEventView_LL"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="0dp"
        android:weightSum="100"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/HomeEventView_IV_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/HomeEventView_TV_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anton"
                    android:shadowColor="#000000"
                    android:shadowDx="1.5"
                    android:shadowDy="1.3"
                    android:shadowRadius="1.6"
                    android:text="Event titel"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/HomeEvent_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_baseline_add_box_24" />

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayoutTop"
        android:background="#C11D1D"
        android:weightSum="3">

        <TextView
            android:id="@+id/HomeEventView_TV_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/anton"
            android:paddingLeft="8dp"
            android:text="KM"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/HomeEventView_TV_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/anton"
            android:text="DATO"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16dp"

            />

        <TextView
            android:id="@+id/HomeEventView_TV_timeframe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/anton"
            android:paddingRight="8dp"
            android:text=" 00:00 - 00:00"
            android:textAlignment="textEnd"
            android:textColor="#FFFFFF"
            android:textSize="15dp"

            />

    </LinearLayout>
</LinearLayout>