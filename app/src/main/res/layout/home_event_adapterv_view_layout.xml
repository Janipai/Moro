<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"

    >

    <LinearLayout
        android:weightSum="100"
        android:id="@+id/HomeEventView_LL"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:padding="0dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/HomeEventView_IV_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"

            />
        <TextView
            android:textAlignment="center"
            android:id="@+id/HomeEventView_TV_title"
            android:text="Event titel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anton"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/HomeEventView_TV_title"
            android:src="@drawable/ic_baseline_add_box_24"
            />

        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:weightSum="3"
        android:layout_below="@+id/linearlayoutTop"
        android:background="#C11D1D"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/HomeEventView_TV_distance"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KM"
            android:fontFamily="@font/anton"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:paddingLeft="8dp"
            />
        <TextView
            android:id="@+id/HomeEventView_TV_date"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="DATO"
            android:fontFamily="@font/anton"
            android:textColor="#FFFFFF"
            android:textSize="16dp"

            />
        <TextView
            android:id="@+id/HomeEventView_TV_timeframe"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" 00:00 - 00:00"
            android:fontFamily="@font/anton"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:paddingRight="8dp"

            />

    </LinearLayout>
</LinearLayout>