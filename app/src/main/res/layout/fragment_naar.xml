<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDBA"
    tools:context=".Fragments.VibeCheck.NaarFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/idstemningtype"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/anton"
            android:text="NÃ¥r"
            android:textSize="64sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/idtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"

            android:clickable="true"

            android:fontFamily="@font/anton"

            android:onClick="onClick"
            android:text="TYPE"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/idstemning"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"

            android:clickable="true"

            android:fontFamily="@font/anton"
            android:text="STEMNING"
            android:textColor="#FFA500"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <ImageView
            android:id="@+id/arrow_up"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_above="@+id/recyclerview_naar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_arrow_up"
            app:layout_constraintBottom_toTopOf="@+id/recyclerview_naar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/arrow_down"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/recyclerview_naar"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_arrow_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerview_naar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_naar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idstemningtype"
            android:layout_centerHorizontal="true"

            app:layout_constraintTop_toBottomOf="@+id/idtype"
            tools:layout_editor_absoluteX="188dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>