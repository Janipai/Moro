<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:gravity="center_vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewItem"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#000000"
        >
        <ImageView
            android:id="@+id/cardviewImgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginBottom="10dp"
            android:weightSum="2"

            >

            <TextView
                android:layout_weight="1"
                android:id="@+id/ligenutxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/anton"
                android:text="LIGE NU"
                android:textSize="40sp"
                android:textColor="#FFFFFF"
                />

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewEnd"
                    android:id="@+id/cardviewDate"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/anton"
                    android:text="1/11/2020"
                    android:textSize="30sp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="40dp"
                    android:background="#D81818">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cardviewEventtitle"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/anton"
                        android:text="Klunkdyp pÃ¥ resturant Saltvand"
                        android:textSize="10sp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/cardviewTime"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/anton"
                        android:text="10:00                                         14:00"
                        android:textSize="10sp"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>